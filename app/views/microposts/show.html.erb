<% provide(:title, "phone forum") %>
<div class="row">
	<aside class="col-md-4">
		<section class="thread_info">
			<h1>
				<%= @micropost.content %>
			</h1>
		</section>
	</aside>
	<div class="col-md-8">
		<% if @micropost.comments.any? %>
		<h3></a>Comments (<%= @micropost.comments.count %>)</h3>
		<ol class="comments">
			<%= render @comments %>
		</ol>
		<%= will_paginate @comments %>
		<% end %>
	</div>
</div>